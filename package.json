{
  "name": "google-nest-notifier-api",
  "version": "0.0.2",
  "description": "Web API for send notifications to Google Nest",
  "author": "INOUE Takuya <inouetakuya5@gmail.com>",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "rm -rf dist/ && tsc",
    "start": "pm2 start ecosystem.config.js --env production",
    "reload": "pm2 reload ecosystem.config.js --env production --update-env",
    "restart": "pm2 restart ecosystem.config.js --env production --update-env",
    "stop": "pm2 stop ecosystem.config.js",
    "deploy": "pm2 deploy ecosystem.config.js production",
    "dev": "nodemon",
    "lint": "eslint --ext .js,.ts --ignore-path .gitignore .",
    "lint:fix": "eslint --ext .js,.ts --ignore-path .gitignore . --fix",
    "test": "jest --verbose --runInBand --detectOpenHandles"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.0",
    "castv2-client": "^1.2.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "google-tts-api": "0.0.6",
    "mdns-js": "^1.0.3",
    "module-alias": "^2.2.2",
    "morgan": "^1.9.1",
    "ngrok": "^3.2.7",
    "pm2": "^4.2.3",
    "proper-url-join": "^2.1.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/jest": "^25.1.2",
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.19.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^25.1.0",
    "minimist": "^1.2.5",
    "node-mocks-http": "^1.8.1",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "ts-jest": "^25.2.0",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.5"
  },
  "_moduleAliases": {
    "~": "dist"
  }
}
